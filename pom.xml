<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.livinglogic</groupId>
	<artifactId>ul4</artifactId>
	<version>0.162</version>
	<packaging>jar</packaging>
	<name>UL4</name>
	<description>Java implementation of the UL4 templating language</description>
	<url>http://www.livinglogic.de/Python/ul4c/</url>
	<inceptionYear>2008</inceptionYear>
	<organization>
		<name>LivingLogic AG</name>
		<url>http://www.livinglogic.de/</url>
	</organization>
	<developers>
		<developer>
			<name>Walter Dörwald</name>
			<email>walter@livinglogic.de</email>
			<timezone>Europe/Munich</timezone>
		</developer>
		<developer>
			<name>Andreas Gaßner</name>
			<email>ag@livinglogic.de</email>
			<timezone>Europe/Munich</timezone>
		</developer>
	</developers>
	<scm>
		<url>https://github.com/LivingLogic/LivingLogic.Java.ul4</url>
	</scm>
	<repositories>
		<repository>
			<id>gitlab-maven</id>
			<url>https://gitlab.livinglogic.de/api/v4/packages/maven</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>nexus-new</id>
			<name>LivingLogic Nexus Maven Releases</name>
			<url>https://nexus.livinglogic.de/repository/maven-releases</url>
		</repository>
		<snapshotRepository>
			<id>nexus-new</id>
			<name>LivingLogic Nexus Maven Snapshot</name>
			<url>https://nexus.livinglogic.de/repository/maven-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<antlr.version>3.5.2</antlr.version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.antlr</groupId>
				<artifactId>antlr3-maven-plugin</artifactId>
				<version>${antlr.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>antlr</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.2.0</version>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.11</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-text</artifactId>
			<version>1.9</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.2</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>antlr-runtime</artifactId>
			<version>${antlr.version}</version>
		</dependency>
		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>com.lambdaworks</groupId>
			<artifactId>scrypt</artifactId>
			<version>1.4.0</version>
		</dependency>
		<dependency>
			<groupId>com.oracle.database.jdbc</groupId>
			<artifactId>ojdbc6</artifactId>
			<version>11.2.0.4</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
